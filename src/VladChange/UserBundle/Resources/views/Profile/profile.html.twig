{% extends 'VladChangeMainBundle:Default:page.html.twig' %}

{% block div_main %}
    <div class="fos_user_user_show">
        <p>Имя: {{ user.getName() }}</p>
        <p>Фамилия: {{ user.getSurname() }}</p>
        <p>E-mail: {{ user.getEmail() }}</p>
        {% if isMine %}
            <a href="{{ path('vlad_change_add_project') }}">Добавить проект</a>
            <a href="{{ path('fos_user_security_logout') }}">Выход</a>
        {% endif %}
        <ul>

        </ul>



    {% for p in user.getProjects() %}
        <li>Название - {{ p.getName() }}</li>
        <li>Дата создания - {{ p.getCreateDate().format('d-m-Y') }}</li>
        <li>Дата окончания - {{ p.getDieDate().format('d-m-Y') }}</li>
        <li>Краткое описание - {{ p.getShortDesc() }}</li>
        <li>Описание - {{ p.getDesc() }}</li>
    {% endfor %}


    </div>
{% endblock %}
