{% extends 'VladChangeMainBundle:Default:page.html.twig' %}

{% block links %}
   {{ parent() }}
   <link href="{{ asset('bundles/vladchangemain/uploadphoto/css/main.css" rel="stylesheet') }}" />
   <link href="{{ asset('bundles/vladchangemain/uploadphoto/css/imgareaselect-default.css') }}" rel="stylesheet" />
   <link href="{{ asset('bundles/vladchangemain/uploadphoto/css/upload_photo.css') }}" rel="stylesheet" />
   <link href="{{ asset('bundles/vladchangemain/uploadphoto/css/resize_photo.css') }}" rel="stylesheet" />
   <script src="{{ asset('bundles/vladchangemain/uploadphoto/js/ajaxupload.3.5.js') }}"></script>
   <script src="{{ asset('bundles/vladchangemain/uploadphoto/js/imgareaselect.js') }}"></script>
   <script src="{{ asset('bundles/vladchangemain/uploadphoto/js/upload_photo.js') }}"></script>
   <script>
      window.referer = '{$referer}'.split('/?', 1);
   </script>
{% endblock %}

{% block div_main %}
  <div id="wrap">
    <section id="upload_photo">
      <button class="upload" data='{{ photo_data }}'>Выбрать фотографию</button>
      <small class="info">Минимальная ширина: <span class="_width"></span> пикс., минимальная высота: <span class="_height"></span> пикс., максимальный размер: <span class="_size"></span> Мб</small>
    </section>
    <section id="resize_photo">
      <img class="src_image" src="#" />
      <small class="info">Выделите область фотографии чтобы обрезать её до нужных размеров</small>
      <button class="go_end">Сохранить</button>
    </section>
  </div>
{% endblock %}